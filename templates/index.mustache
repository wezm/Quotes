<div>
  <h2>Contributors</h2>

  {{#users}}
  <a class="user" href="{{user_path}}">
    <img src="{{avatar}}" alt="{{name}}'s avatar" />
    <span class="username">{{name}}</span>
  </a>
  {{/users}}
</div>

<div class="quote-list">
  <h2>Recent Quotes</h2>
  <ul>
    {{#quotes}}
    <li>
      <blockquote cite="/users/{{quotee}}">
        <p><span class="left quote">&ldquo;</span>{{body}}<span class="right quote">&rdquo;</span></p>
        &mdash; <a href="/users/{{quotee}}" class="username">{{quotee}}</a>{{#created_at}}, {{date}}{{/created_at}}
      </blockquote>
    </li>
    {{/quotes}}
  </ul>
</div>

{{{pager}}}
